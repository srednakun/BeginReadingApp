<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView8"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/book" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/imageButton"
        android:fontFamily="@font/fredoka_one"
        android:text="Parent Guide"
        android:textColor="#F6BD60"
        android:textSize="30sp" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:background="@color/green"
        android:clickable="true"
        android:onClick="goHome"
        android:src="?attr/actionModeCloseDrawable" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="23dp"
        android:layout_marginTop="41dp"
        android:layout_toEndOf="@+id/imageView9"
        android:fontFamily="@font/source_sans_pro"
        android:text="Easier books are at the top and they get harder towards the bottom."
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="23dp"
        android:layout_marginTop="52dp"
        android:layout_toEndOf="@+id/imageView4"
        android:fontFamily="@font/source_sans_pro"
        android:text="Choose reading level at the top."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_marginStart="23dp"
        android:layout_marginTop="47dp"
        android:layout_toEndOf="@+id/imageView8"
        android:fontFamily="@font/source_sans_pro"
        android:text="Books are sorted by difficulty."
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageButton"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="33dp"
        app:srcCompat="@drawable/book" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView4"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/book" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/chart" />

</RelativeLayout>