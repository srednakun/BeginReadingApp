<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beginreadingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeginReadingApp">
        <activity
            android:name=".bookstoryactivity"
            android:exported="false"
            android:label="@string/title_activity_bookstoryactivity"
            android:theme="@style/Theme.BeginReadingApp.NoActionBar" />
        <activity
            android:name=".HelpPage"
            android:exported="false"
            android:label="HelpPage"
            android:theme="@style/Theme.BeginReadingApp.NoActionBar" />
        <activity
            android:name=".ui.login.Home"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.BeginReadingApp.NoActionBar" />
        <activity
            android:name=".ui.login.parentGuide"
            android:exported="false"
            android:label="@string/title_activity_parent_guide"
            android:theme="@style/Theme.BeginReadingApp.NoActionBar" />
        <activity
            android:name=".ui.login.UserLogin"
            android:exported="false"
            android:label="@string/title_activity_user_login" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>